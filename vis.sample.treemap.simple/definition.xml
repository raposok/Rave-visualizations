<chartTypeDefinition name="vis.sample.treemap.simple" adapter="com.ibm.cognos.adapters.rave.RAVEChartAdapter" definitionVersion="1" adapterVersion="1" xmlns="http://www.ibm.com/xmlns/prod/ba/visBundle/chartTypeDefinition.1/">
	<label ids="lblChartType"/>
	<description ids="descChartType"/>
	<tooltip ids="tooltipChartType"/>
	<author>Kelly Raposo</author>
	<tags>
		<tag ids="tagSimple">Simple</tag>
		<tag ids="tagTreemap">treemap</tag>
	</tags>
	<dataSets>
		<dataSet name='dataSet' hasChartElements='true' optionalOverride='true'>
			<label ids='lblDataSet'/>
			<description ids='descDataSet'/>
			<tooltip ids='tooltipDataSet'/>
			<categoryEdges>
				<categoryEdge name='categoriesEdge'>
					<categoryLevels>
						<categoryLevel>
							<categoryFields>
								<categoryField name='categories' categoryValues='indexedFull'>
									<label ids='lblCategories'/>
									<description ids='descCategories'/>
									<tooltip ids='tooltipCategories'/>
								</categoryField>
							</categoryFields>
						</categoryLevel>
						<categoryLevel>
							<categoryFields>
								<categoryField name='categories2' categoryValues='indexedFull'>
									<label ids='lblCategories2'/>
									<description ids='descCategories2'/>
									<tooltip ids='tooltipCategories2'/>
								</categoryField>
							</categoryFields>
						</categoryLevel>
						<categoryLevel>
							<categoryFields>
								<categoryField name='categories3' categoryValues='indexedFull'>
									<label ids='lblCategories3'/>
									<description ids='descCategories3'/>
									<tooltip ids='tooltipCategories3'/>
								</categoryField>
							</categoryFields>
						</categoryLevel>
					</categoryLevels>
				</categoryEdge>
			</categoryEdges>
			<valuesEdge>
				<valueFields>
					<valueField name='sizeValue' supportsRange='true'>
						<label ids='lblSizeValue'/>
						<description ids='descSizeValue'/>
						<tooltip ids='tooltipSizeValue'/>
					</valueField>
				</valueFields>
			</valuesEdge>
			<instanceTable>
				<categoryFieldInstance refField='categories'/>
				<categoryFieldInstance refField='categories2'/>
				<categoryFieldInstance refField='categories3'/>
				<valueFieldInstance refField='sizeValue'/>
			</instanceTable>
		</dataSet>
	</dataSets>
	<properties>
		<enumProperty name="animationEffect" default="none" outputType="javascript">
			<label ids="lblAnimationEffect"/>
			<description ids="viz_animationEffect"/>
			<enumValues>
				<enumValue value="none">
					<label ids="lblAnimationNone"/>
				</enumValue>
				<enumValue value="transition">
					<label ids="lblAnimationTransition"/>
				</enumValue>
				<enumValue value="fadeIn">
					<label ids="lblAnimationFadeIn"/>
				</enumValue>
				<enumValue value="flyIn">
					<label ids="lblAnimationFlyin"/>
				</enumValue>
				<enumValue value="grow">
					<label ids="lblAnimationGrow"/>
				</enumValue>
				<enumValue value="reveal">
					<label ids="lblAnimationReveal"/>
				</enumValue>
			</enumValues>
		</enumProperty>
		<integerProperty name="width" default="600">
			<label ids="lblWidth"/>
			<description ids="viz_width"/>
		</integerProperty>
		<integerProperty name="height" default="500">
			<label ids="lblHeight"/>
			<description ids="viz_height"/>
		</integerProperty>
	</properties>
</chartTypeDefinition>
